# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /api/show/list        @mizuchi.controllers.ShowController.list
POST        /api/show/create      @mizuchi.controllers.ShowController.create
GET         /                     mizuchi.controllers.Application.index
GET         /ws           @mizuchi.controllers.WebsocketController.connect

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)
